#!/usr/bin/env bash

echo "== sync"

set -e

#check for bucket name 

if [ -z "$1" ]; then
        echo "Provide a bucket name eg mybucket"
        exit 1
fi

#check for filename prefix

if [ -z "$2" ]; then
        echo "Provide a bucket name eg mybucket"
        exit 1
fi

BUCKET_NAME=$1
file=$2

OUTPUT_DIR="./genfiles"

# Remove folder if it exists
if [ -d "$OUTPUT_DIR" ]; then
    rm -r "$OUTPUT_DIR"
fi

# Recreate the directory **AFTER** deleting it
mkdir -p "$OUTPUT_DIR"

# Loop to create 5 files
for i in {1..5}; do
    FILE_NAME="$OUTPUT_DIR/${file}_$i.txt"

    # Generate file with some content
    echo "This is file $i" > "$FILE_NAME"

    # Confirm file creation
    echo "Created: $FILE_NAME"
done

echo "âœ… 5 files have been generated in '$OUTPUT_DIR'"

# Show folder structure (only if 'tree' is installed)
if command -v tree &> /dev/null; then
    tree "$OUTPUT_DIR"
else
    ls -l "$OUTPUT_DIR"
fi

aws s3 sync $OUTPUT_DIR s3://$BUCKET_NAME/files 
